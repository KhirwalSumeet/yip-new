<div class="row">
    <div class="col-lg-6">

        <form role="form" method='post' action='/editteam/id={{ team._id }}'>
			<div class="form-group">
                <label> Team Name</label>
                <input class="form-control" name="tname" placeholder="Enter name" value="{{team.name}}" required>
            </div>
            <br><br>

            <div class="form-group">
                <label>Student 1 Details</label>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="name1" placeholder="Enter name" value="{{ team.firstStudent.name }}" required>
            </div>

            <div class="form-group">
                <label>Contact Number</label>
                <input class="form-control" name="num1" placeholder="Enter Number" value="{{ team.firstStudent.contact }}" required>
            </div>

            <div class="form-group">
                <label>Email id (if any)</label>
                <input class="form-control" name="email1" type="email" value="{{ team.firstStudent.email }}" placeholder="Enter email" >
            </div>
            <br><br>

            <div class="form-group">
                <label>Student 2 Details</label>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="name2" placeholder="Enter name" value="{{ team.secondStudent.name }}" required>
            </div>

            <div class="form-group">
                <label>Contact Number</label>
                <input class="form-control" name="num2" placeholder="Enter Number" value="{{ team.secondStudent.contact }}"  required>
            </div>

            <div class="form-group">
                <label>Email id (if any)</label>
                <input class="form-control" name="email2" type="email" placeholder="Enter email" value="{{ team.secondStudent.email }}"  >
            </div>
            <br><br>

            <div class="form-group">
                <label>Student 3 Details</label>
            </div>

            <div class="form-group">
                <label>Name</label>
                <input class="form-control" name="name3" placeholder="Enter name" value="{{ team.thirdStudent.name }}"  required>
            </div>

            <div class="form-group">
                <label>Contact Number</label>
                <input class="form-control" name="num3" placeholder="Enter Number" value="{{ team.thirdStudent.contact }}"  required>
            </div>

            <div class="form-group">
                <label>Email id (if any)</label>
                <input class="form-control" name="email3" type="email" value="{{ team.thirdStudent.email }}"  placeholder="Enter email" >
            </div>

            <br><br>
            <button type="submit" class="btn btn-success">Submit Button</button>
            <button type="reset" class="btn btn-default">Reset Button</button>

        </form>

    </div>

</div>
<!-- /.row -->