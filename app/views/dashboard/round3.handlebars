<div class="col-lg-12" ng-app="app" ng-controller="teams">
	<div class="table-responsive">
	    <table class="table table-bordered table-hover">
	        <thead>
	            <tr>
	                <th>Team Name</th>
	                <th>Make Payment</th>
	            </tr>
	        </thead>
	        <tbody id='tbody'>
	            <tr ng-repeat="x in teamData">
		            <td> [[ x.name ]] </td>
		            <td> <button class="pay_btn" data-id="[[x._id]]">Proceed to Recharge</button> </td>
	            </tr>
	        </tbody>
	    </table>
	</div>
</div>

<script type="text/javascript">
	app.controller("teams", function($scope) {
    $.get("/getteams/r3",function(data){
        $scope.teamData  = data;
        $scope.$apply();
    });
});
</script>