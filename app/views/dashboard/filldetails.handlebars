<div class="row">
    <div class="col-lg-6">

        <form role="form" method='post' action='/filldetails'>
			<div class="form-group">
                <label> School address</label>
                <textarea class="form-control" rows="3" name="address"></textarea>
            </div>

            <div class="form-group">
                <label>City</label>
                <input class="form-control" name="city" placeholder="Enter city" required>
            </div>

            <div class="form-group">
                <label>State</label>
                <input class="form-control" name="state" placeholder="Enter state" required>
            </div>

            <div class="form-group">
                <label>Office Contact Number</label>
                <input class="form-control" name="onum" placeholder="Enter Number" required>
            </div>

            <div class="form-group">
                <label>Principal Name</label>
                <input class="form-control" name="pname" placeholder="Enter Name" required>
            </div>


            <div class="form-group">
                <label>Principal's email id </label>
                <input class="form-control" name="pemail" type="email" placeholder="Enter email" required>
            </div>

            <div class="form-group">
                <label>Principal's Contact Number</label>
                <input class="form-control" name="pnum" placeholder="Enter Number" required>
            </div>

            <div class="form-group">
                <label>Co-ordinating Teacher Name</label>
                <input class="form-control" name="tname" placeholder="Enter Name" required>
            </div>


            <div class="form-group">
                <label>Co-ordinating teacher's email id </label>
                <input class="form-control" name="temail" type="email" placeholder="Enter email" required>
            </div>

            <div class="form-group">
                <label>Co-ordinating teacher's Contact Number</label>
                <input class="form-control" name="tnum" placeholder="Enter Number" required>
            </div>

            <button type="submit" class="btn btn-default">Submit Button</button>
            <button type="reset" class="btn btn-default">Reset Button</button>

        </form>

    </div>

</div>
<!-- /.row -->